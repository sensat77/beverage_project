/* pages/profile/profile.wxss */
.page-container {
    padding: 40rpx;
    background-color: #f7f7f7;
    min-height: 100vh;
    box-sizing: border-box;
  }
  .profile-card {
    background-color: white;
    border-radius: 16rpx;
    padding: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 40rpx;
  }
  .avatar {
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 20rpx;
  }
  .avatar-img {
    width: 100%;
    height: 100%;
  }
  .username {
    font-size: 40rpx;
    font-weight: bold;
  }
  .reg-date {
    font-size: 24rpx;
    color: #aaa;
    margin-top: 10rpx;
  }
  .logout-button {
    width: 100%;
    background-color: #E64340;
    color: white;
    margin-top: 60rpx;
  }

  .menu-list {
    margin-top: 40rpx;
    background-color: white;
    border-radius: 16rpx;
    /* overflow: hidden 属性确保内部元素的边框不会超出圆角 */
    overflow: hidden;
  }
  
  .menu-item {
    display: flex;
    /* flex布局，让左右两边内容自动分开 */
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
    border-bottom: 1rpx solid #f0f0f0; /* 分割线 */
    font-size: 30rpx;
    color: #333;
  }
  
  /* 最后一个菜单项不需要下边框 */
  .menu-item:last-child {
    border-bottom: none;
  }
  
  /* 简单的点击效果 */
  .menu-item:active {
    background-color: #f7f7f7;
  }
  
  /* 设置右边 ">" 箭头的颜色 */
  .menu-item text:last-child {
    color: #aaa;
    font-weight: bold;
  }