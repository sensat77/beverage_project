/* pages/daily_orders/daily_orders.wxss */
.page-container {
    padding: 20rpx;
  }
  .order-item {
    display: flex;
    align-items: center;
    background-color: white;
    padding: 25rpx;
    border-radius: 12rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  }
  .info-section {
    flex: 1; /* 占据大部分空间 */
  }
  .action-section {
    width: 120rpx; /* 给删除按钮固定宽度 */
    text-align: right;
  }
  .customer-name {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
  }
  .details {
    font-size: 26rpx;
    color: #888;
  }
  .details .commission {
    margin-left: 30rpx;
    color: #E64340;
  }
  .delete-btn {
    margin: 0;
  }
  .no-data {
    text-align: center;
    color: #aaa;
    padding-top: 200rpx;
  }