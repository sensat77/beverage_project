/* pages/about/about.wxss */
.container {
    padding: 30rpx;
    color: #333;
    line-height: 1.7;
  }
  
  .header {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 40rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
    margin-bottom: 30rpx;
  }
  
  .logo {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    margin-bottom: 20rpx;
  }
  
  .title {
    font-size: 40rpx;
    font-weight: bold;
  }
  
  .version {
    font-size: 24rpx;
    color: #aaa;
    margin-top: 10rpx;
  }
  
  .section {
    margin-bottom: 50rpx;
  }
  
  .section-title {
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
    padding-bottom: 10rpx;
    border-bottom: 1rpx solid #eee;
  }
  
  .sub-title {
    font-size: 30rpx;
    font-weight: bold;
    margin-top: 30rpx;
    margin-bottom: 10rpx;
  }
  
  .p {
    font-size: 28rpx;
    margin-bottom: 10rpx;
    text-indent: 2em; /* 首行缩进 */
  }
  
  .code-block {
    background-color: #f7f7f7;
    padding: 20rpx;
    border-radius: 8rpx;
    font-size: 26rpx;
    font-family: monospace;
    white-space: pre-wrap;
    margin: 20rpx 0;
    border: 1rpx solid #eee;
  }
  
  .tip {
    font-size: 28rpx;
    background-color: #fffbe6;
    border: 1rpx solid #ffe58f;
    padding: 20rpx;
    border-radius: 8rpx;
  }